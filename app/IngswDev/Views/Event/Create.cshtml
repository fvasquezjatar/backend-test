@model IngswDev.Models.EventViewModel

@{
    ViewData["Title"] = "Create a new Event";
}

<h2>@ViewData["Title"]</h2>
<hr/>
<form asp-controller="Event" asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Highlight" />
                    <label asp-for="Highlight"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImageUri" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImageUri" class="form-control"/>
                <span asp-validation-for="ImageUri" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Target Date</label>
            <div class="col-md-10">
                <input type="datetime-local" name="TargetDates[0]" class="form-control"/>
                <span asp-validation-for="TargetDates" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
