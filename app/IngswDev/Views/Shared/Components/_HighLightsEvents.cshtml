@model IEnumerable<IngswDev.EntityFramework.Models.Entities.Event>
@if (Model != null)
{
    @foreach (var item in Model)
    {
        var targetDate = item.TargetDates.First();
        <div class="col-md-8">
            <p style="margin-bottom: 0px">
                <b>@item.Title - @targetDate.TargetDate.ToString("MMM dd @ yyyy")</b>
            </p>
            @if (item.Description.Length > 25)
            {
                <p style="font-size: 10px;">@item.Description.Substring(0, 25)</p>
            }
            else
            {
                <p style="font-size: 10px;">@item.Description</p>
            }
        </div>
    }
}
